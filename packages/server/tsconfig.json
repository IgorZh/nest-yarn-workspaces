{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "composite": true,
    "rootDirs": ["../../packages/common", "src"]
  },
  "references": [
    {
      "path": "../../packages/common"
    }
  ],
  "paths": {
    "@nest-yarn-workspaces/common/": ["../../packages/common/"],
    "@nest-yarn-workspaces/common/*": ["../../packages/common/*"]
  },
  "include": ["../../packages/common", "src"]
}
